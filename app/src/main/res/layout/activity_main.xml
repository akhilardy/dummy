                    android:layout_height="wrap_content"
                    android:text="4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:onClick="takeNum"
                    android:id="@+id/btn24"/>
                <Button
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:onClick="takeNum"
                    android:id="@+id/btn25"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="10sp"
                    android:text="Very Easy"/>


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Medium" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="60sp"
                    android:text="Killer"/>

            </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:text="* Leadership is easily contactable"
            android:layout_margin="10sp"
            />
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:layout_marginLeft="10sp"
                    android:id="@+id/radioLeaderYes"
                    android:onClick="radioLeader"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:text="No"
                    android:id="@+id/radioLeaderNo"
                    android:onClick="radioLeader"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:id="@+id/noLeader"
                    android:text="No leaders at work here"
                    android:onClick="radioLeader"/>
            </RadioGroup>
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:textColor="@color/colorText"
                android:text="* Does the CEO speak regularly to you or the entire staff through emails"
                />
            <include layout="@layout/radio_layout"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:layout_margin="10sp"
                android:text="* Has a separate section for child care?"/>
            <include layout="@layout/radio_layout"/>

        <TextView
