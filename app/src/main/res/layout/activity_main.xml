<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">



    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
           >
            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Company Name"
                />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Would you like to display your name Will never be disclosed to anyone"
        android:textColor="@color/colorText"
        android:layout_margin="10sp"/>

    <RadioGroup
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/RadioGroup">

        <RadioButton
            android:id="@+id/radioButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Self name"
            android:onClick="askMe"

            />

        <RadioButton
            android:id="@+id/radioButton6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Alias name/Unknown"
            android:onClick="askMe"/>


    </RadioGroup>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:textColor="@color/colorText"
        android:text="We will ask some few questions for rating purpose please fill it."/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:textColor="@color/colorText"
        android:text="*Your Company Name"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:textColor="@color/colorText"
        android:text="* Rate the Work pressure involved this quater"/>


    <include layout="@layout/common_layout"/>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10sp">
    <TextView
        android:layout_width="60sp"
        android:layout_height="wrap_content"

        android:text="Very High"/>
    <TextView
        android:layout_width="60sp"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:text="High"/>

    <TextView
        android:layout_width="55dp"
        android:layout_height="match_parent"
        android:gravity="center"

        android:text="Normal" />
    <TextView
        android:layout_width="50sp"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:text="Less"/>
    <TextView
        android:layout_width="80sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"

        android:text="Very Less"/>



</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:textColor="@color/colorText"
        android:text="* How the Infrastructure at office (furniture,Connectivity..)"
        />
        <include layout="@layout/common_layout"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp">
        <TextView
            android:layout_width="60sp"
            android:layout_height="wrap_content"

            android:text="Worst"/>
        <TextView
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Better"/>

        <TextView
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Normal" />
        <TextView
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Good"/>
        <TextView
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Great"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:textColor="@color/colorText"
            android:text="* Has Shuttles and Cabs for pick up and drops "/>
        <include layout="@layout/common_layout"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp">
            <TextView
                android:layout_width="40sp"
                android:layout_height="wrap_content"

                android:text="Never"/>
            <TextView
                android:layout_width="60sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_horizontal"
                android:text="Some Times"/>

            <TextView
                android:layout_width="66dp"
                android:layout_height="match_parent"


                android:text="Only Night shifts" />
            <TextView
                android:layout_width="50sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_gravity="center_horizontal"

                android:text="Occasional"/>
            <TextView
                android:layout_width="70sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"


                android:text="Dialy"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:layout_margin="10sp"
            android:text="* Has Power Backup?(UPS/Invertor and Generator)"
            />
           <include layout="@layout/radio_layout"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:layout_margin="10sp"
            android:text="* Has a sports area/gym area"
            />
            <include layout="@layout/radio_layout"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:layout_margin="10sp"
            android:text="* Frequently conducts Fun events"
            />
            <include layout="@layout/common_layout"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp">
                <TextView
                    android:layout_width="60sp"
                    android:layout_height="wrap_content"

                    android:text="Weekly"/>
                <TextView
                    android:layout_width="60sp"
                    android:layout_height="wrap_content"
                    android:gravity="center"

                    android:text="Monthly"/>

                <TextView
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:gravity="center"

                    android:text="Quaterly" />
                <TextView
                    android:layout_width="80sp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"

                    android:text="Very Often"/>
                <TextView
                    android:layout_width="80sp"
                    android:layout_height="wrap_content"


                    android:text="Never"/>



            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:text="* How difficult is the hiring exam and interview"
                android:layout_margin="10sp"/>
            <include layout="@layout/common_layout"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp">
                <TextView
                    android:layout_width="60sp"
                    android:layout_height="wrap_content"

                    android:text="Very Easy"/>
                <TextView
                    android:layout_width="60sp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Easy"/>

                <TextView
                    android:layout_width="66dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Medium" />
                <TextView
                    android:layout_width="60sp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Hard"/>
                <TextView
                    android:layout_width="60sp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Killer"/>

            </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:text="* Leadership is easily contactable"
            android:layout_margin="10sp"
            />
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:layout_marginLeft="10sp"
                    android:id="@+id/radioLeaderYes"
                    android:onClick="radioLeader"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:text="No"
                    android:id="@+id/radioLeaderNo"
                    android:onClick="radioLeader"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:id="@+id/noLeader"
                    android:text="No leaders at work here"
                    android:onClick="radioLeader"/>
            </RadioGroup>
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:textColor="@color/colorText"
                android:text="* Does the CEO speak regularly to you or the entire staff through emails"
                />
            <include layout="@layout/radio_layout"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:layout_margin="10sp"
                android:text="* Has a separate section for child care?"/>
            <include layout="@layout/radio_layout"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_margin="20sp"
            android:layout_gravity="center_horizontal"
            android:text="Finally Rate your Employer"/>
            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="254dp"
                android:layout_height="wrap_content"
               android:layout_margin="20dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/ratingColor"
                android:numStars="5"
                android:padding="10dp"
                android:theme="@style/RatingBar"
                />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Note :you will be rating for the next quarterly again"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/submit"
            android:textColor="@color/white"
            android:layout_margin="10dp"


            android:text="Submit"/>
        </LinearLayout>

    </ScrollView>
</android.widget.LinearLayout>