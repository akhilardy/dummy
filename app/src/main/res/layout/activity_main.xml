                    android:onClick="takeNum"
                    android:id="@+id/btn8"/>
                <Button
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:onClick="takeNum"
                    android:id="@+id/btn9"/>
