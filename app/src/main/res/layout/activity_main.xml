<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">



    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
           >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp">
                <TextView
                    android:id="@+id/tvCom"
                    android:layout_width="200sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:textSize="20sp"
                    android:inputType="textPersonName"
                    android:text="Company Name"
                    />
                <TextView
                    android:id="@+id/finalView"
                    android:layout_width="100sp"
                    android:textColor="@color/colorText"
                    android:textSize="40dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Would you like to display your name(Will never be disclosed to anyone)"
        android:textColor="@color/colorText"
        android:layout_margin="10sp"/>

    <RadioGroup
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/RadioGroup">

        <RadioButton
            android:id="@+id/radioButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Self name"
            android:onClick="askMe"

            />

        <RadioButton
            android:id="@+id/radioButton6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Alias name/Unknown"
            android:onClick="askMe"/>


    </RadioGroup>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:textColor="@color/colorText"
        android:text="We will ask some few questions for rating purpose please fill it."/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:textColor="@color/colorText"
        android:text="*Your Company Name"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:id="@+id/companyName"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:textColor="@color/colorText"
        android:text="* Rate the Work pressure involved this quater"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="takeNum"
            android:id="@+id/btn1"/>
        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content"
            android:text="2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/round_button"
            android:onClick="takeNum"
            android:id="@+id/btn2"
            />
        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content"
            android:text="3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/round_button"
            android:onClick="takeNum"
            android:id="@+id/btn3"/>
        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content"
            android:text="4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="takeNum"
            android:id="@+id/btn4"/>
        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="wrap_content"
            android:text="5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="takeNum"
            android:id="@+id/btn5"/>
    </LinearLayout>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10sp">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:paddingLeft="10sp"
        android:layout_weight="1"
        android:text="Very High"/>



    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_weight="1"
        android:gravity="center"
        android:text="Normal" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="30sp"
        android:text="Very Less"/>



</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:textColor="@color/colorText"
        android:text="* How the Infrastructure at office (furniture,Connectivity..)"
        />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <Button
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:onClick="takeNum"
                    android:id="@+id/btn6"/>
